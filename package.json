{
  "name": "@hrconnect/root",
  "version": "1.0.50",
  "private": true,
  "workspaces": ["client"],
  "scripts": {
    "dev": "concurrently 'bun run --watch server/index.ts' 'bun --filter client dev' 'bun db:studio'",
    "dev:backend": "bun run --watch server/index.ts",
    "dev:frontend": "bun --filter client dev",
    "build": "bun build --target bun --outdir out server/index.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun run lib/seed.ts",
    "auth:generate": "bunx --bun @better-auth/cli@latest generate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/eden": "^1.4.6",
    "@elysiajs/openapi": "^1.4.13",
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "elysia": "^1.4.19",
    "postgres": "^3.4.7",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "bun-types": "^1.3.5",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8"
  },
  "module": "server/index.js",
  "exports": {
    ".": "./server/index.ts"
  }
}
